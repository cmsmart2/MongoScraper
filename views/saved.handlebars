<div class="container">
   <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>{{this.title}}</h4>
                    </div>
                    <div class="panel-body">
                        <a href={{this.link}} target="_blank">{{this.link}}</a>
                             <br><br>
                        <button type="button" class="btn btn-success addNote" data-id={{this._id}}>Add a Note</button>
                        <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                        <div id="notes">
                       {{#if Note}}
                      {{#each Note}}
                      </div>
                    </div>
                    {{/each}}
                    {{/if}}
                </div>
            {{/each}}
        {{else}}
        {{/if}}
    </div>
</div>
